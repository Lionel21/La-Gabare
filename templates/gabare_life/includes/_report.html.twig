<section class="bgReport pt-0 pt-md-5 pb-0 pb-md-5">
    <h2 class="text-center p-3">Assemblées Générales</h2>
    <div class="container-fluid">
        <h3 class="ml-md-5 pl-md-4">Liste des compte-rendu de La Gabare</h3>
        <div class="row ml-md-5 mr-md-5">
            <div class="card-body ">
                <table class="table table-hover pt-5">
                    <tbody>
                    {% for report in reports %}
                        <tr>
                            <td class="font-weight-bold mb-0">Compte rendu : {{report.title}} - {{ report.meetingDate |date("d/m/Y") }}</td>
                            <td><a class="btn btn-danger" href="{{report.link}}" target="_blank"><i class="far fa-file-pdf"></i>  Télécharger</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="d-none d-sm-block pl-5 pr-5">
                <img src="https://via.placeholder.com/400x320" alt="image de groupe en réunion">
            </div>
        </div>
    </div>
</section>

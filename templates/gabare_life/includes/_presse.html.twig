<section class="bgPresse pb-5">
    <h2 class="text-center p-3 p-md-5">Presse</h2>
    <div class="container-fluid">
        <div class="row flex-wrap justify-content-around">
            <div class="col-12 col-sm-5 ">
                {% for press in presse %}
                    <div class="card article box mb-5 mb-md-0">
                        <div class="card-body">
                            <img class="picture-article mb-4" src="{{ press.image }}" alt="#">
                            <h4 class="mb-3">{{press.title}}</h4>
                            <p class="mb-3">{{ press.resume }}</p>
                            <i class="fas fa-long-arrow-alt-right">
                                <a href="{{ press.link }}" target="_blank">lire l'article complet ici</a>
                            </i>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="col-12 col-sm-5">
                <div class="card video">
                    <div class="card-body">
                        <iframe src="https://www.youtube.com/embed/0I4XEPtiWmA"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



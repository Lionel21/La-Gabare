<section class="bgActualities pb-5">
    <div class="jumbotron mb-0 d-none d-sm-block mb-3"></div>
    <h2 class="text-center pb-2 pb-md-0 links" id="actualites-de-la-gabare">Les actualités de la Gabare</h2>
    <div class="container-fluid">
        <div class="row flex-wrap m-0 justify-content-around">
            {% for article in articles %}
                <div class="card m-0 mb-5 m-md-5 box col-11 col-md-3">
                    <img class="card-img-top image-size-article" src="{{ article.image }}" alt="Card image cap">
                    <h5 class="theme position-absolute fixed-top mt-2 pl-2 pr-2 p-1">{{ article.theme.name }}</h5>
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.date | date("d/m/Y") }}</p>
                        <p class="card-text overflow-ellipsis">{{ article.description|truncate(80, true)|raw }}</p>
                        <a href="{{ path('article_show', {'slug' : article.slug}) }}" class="btn btn-primary">Consulter</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center">
            <a href="{{ path('article_list') }}" class="btn btn-info btn-lg actu">Voir plus d'actualités</a>
        </div>
    </div>
</section>

<section class="bgActualities links pb-5">
    <div class="image-transition gabare-life-image mb-0 d-none d-sm-block"></div>
    <h2 class="text-center pt-5" id="actualites-de-la-gabare">Les actualités de la Gabare</h2>
    <div class="container-fluid">
        <div class="row flex-wrap m-0 justify-content-around">
            {% for article in articles %}
                <div class="card card-shadow m-0 mb-5 m-md-5 box col-11 col-md-3">
                    {% if article.imageName %}
                        <img class="card-img-top image-size-article"
                             src="{{ vich_uploader_asset(article, 'imageFile') }}" alt="{{ article.title }}"/>
                    {% else %}
                        <img src="{{ asset('build/images/placeholder1.png') }}" alt="{{ article.title }}"
                             class="card-img-top image-size-article"/>
                    {% endif %}
                    <h5 class="theme position-absolute fixed-top mt-2 p-3" style="background: {{ article.theme.color }}">{{ article.theme.name }}</h5>
                    <div class="card-body text-center">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.date | date("d/m/Y") }}</p>
                        <p class="card-text overflow-ellipsis">{{ article.description|truncate(80, true)|raw }}</p>
                        <a href="{{ path('article_show', {'slug' : article.slug}) }}"
                           class="btn btn-primary">Consulter</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="text-center">
            <button type="button" class="logButton" onclick="window.location.href = '{{ path('article_list') }}'">
                Voir plus d'actualités</button>
        </div>
    </div>
</section>

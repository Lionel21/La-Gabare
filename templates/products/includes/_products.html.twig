<section class="productSection">
    <div class="container-fluid">
        <h2 class="text-center p-5">Nos produits</h2>
        <ul>

            {% for category in categories %}
                <a href="{{ path('products_category', {'categoryId' : category.id})}}"><li>
                        {{ category.name | capitalize }}
                    </li></a>
            {% endfor %}
        </ul>
        <div class="container">
            {{ form_start(form) }}

            {{ form_widget(form) }}
            <button class="btn btn-secondary my-2 my-sm-0" type="submit"><i class="fas fa-search"></i>
            </button>
            {{ form_end(form) }}
        </div>

        <div class="row justify-content-center">
            {% for product in products %}


                <div class="card border-success m-3" style="width: 14rem;">
                    <div class="card-header bg-transparent border-success pl-2">{{ product.category.1 | capitalize }}</div>
                    <div class="card-body text-success p-0">
                        <div class=""><img src="https://via.placeholder.com/222x140 "></div>
                        <h5 class="card-title p-2">{{ product.name | lower }} </h5>
                        <p class="card-text pl-2 pb-2">{{ product.price | number_format(2, ',', '.') }} â‚¬</p>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>

{% extends 'base.html.twig' %}

{% block title %}{{ animation.title }}{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1 class="ml-3 mb-4">Aperçu de l'animation</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ animation.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ animation.description }}</td>
        </tr>
        <tr>
            <th>Schedule</th>
            <td>{{ animation.schedule ? animation.schedule|date('d/m/Y') : '' }}</td>
        </tr>
        <tr>
            <th>HourStart</th>
            <td>{{ animation.hourStart ? animation.hourStart|date('H:i') : '' }}</td>
        </tr>
        <tr>
            <th>HourEnd</th>
            <td>{{ animation.hourEnd ? animation.hourEnd|date('H:i') : '' }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>{{ animation.image }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('animation_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

    <a href="{{ path('animation_edit', {'id': animation.id}) }}" class="btn btn-success ml-3">éditer</a>
    <div class="mt-4">
        {{ include('admin_animation/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}

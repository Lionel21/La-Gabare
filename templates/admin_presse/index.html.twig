{% extends 'base.html.twig' %}

{% block title %}Presse index{% endblock %}

{% block body %}
<div class="container-fluid p-4">
    <h1>Presse index</h1>

    <a href="{{ path('presse_new') }}" class="btn btn-primary mb-4">Create new</a>

    <table class="table">
        <thead class="thBackground">
            <tr>
                <th>Id</th>
                <th>Video</th>
                <th>Image</th>
                <th>Title</th>
                <th>Resume</th>
                <th>Link</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presse in presses %}
            <tr>
                <td>{{ presse.id }}</td>
                <td>{{ presse.video }}</td>
                <td>{{ presse.image }}</td>
                <td>{{ presse.title }}</td>
                <td>{{ presse.resume }}</td>
                <td>{{ presse.link }}</td>
                <td>
                    <a href="{{ path('presse_show', {'id': presse.id}) }}" class="btn btn-secondary">show</a>
                    <a href="{{ path('presse_edit', {'id': presse.id}) }}" class="btn btn-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune presse trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}

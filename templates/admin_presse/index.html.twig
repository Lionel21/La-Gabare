{% extends 'layoutAdmin.html.twig' %}

{% block title %}Revue de Presse{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Revue de Presse</h1>

    <a href="{{ path('presse_new') }}" class ="btn btn-primary mb-4">Ajouter<i class="fas fa-plus ml-2"></i></a>

    <table class="table table-striped">
        <thead class="thBackground">
        <thead>
            <tr>
                <th>Vidéo</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for presse in presses %}
            <tr>
                <td>{{ presse.video }}</td>
                <td>{{ presse.image }}</td>
                <td>{{ presse.title }}</td>
                <td class="d-flex pt-3">
                    <a href="{{ path('presse_show', {'id': presse.id}) }}" class="btn btn-secondary mr-4">Aperçu<i
                                class="fas fa-file-alt ml-1"></i></a>
                    <a href="{{ path('presse_edit', {'id': presse.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                    <div>
                        {{ include('admin_presse/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune revue de presse trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% extends 'layoutAdmin.html.twig' %}

{% block title %}Presse{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1 class="ml-2 mb-4">Presse</h1>
    <div class="row ml-2 mb-4">
    <a href="{{ path('presse_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

    <a href="{{ path('presse_edit', {'id': presse.id}) }}" class="btn btn-success ml-3">Éditer<i
                class="fas fa-pen ml-1"></i></a>
    </div>
    <div class="ml-3">
    {{ include('admin_presse/_delete_form.html.twig') }}
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Video</th>
                <td>{{ presse.video }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ presse.image }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ presse.title }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ presse.resume }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ presse.link }}</td>
            </tr>
        </tbody>
    </table>

</div>


{% endblock %}

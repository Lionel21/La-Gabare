<section class="bgCA-Friend links" id="le-conseil-administration-ami">
    <h2 class="text-center mt-5">Le conseil d'administration des amis de La Gabare</h2>
    <div class="container-fluid text-center">
        <div class="scroll-arrow" id="scroll-leftTwo">
            <i class="fas fa-chevron-left"></i>
        </div>
        <ul id="imgListTwo" class="ul-scroll">
            {% for CAFriend in CAFriends %}
                <li class="li-scroll">
                    <div class="img-scroll">
                        <div class="profile">
                            {% if CAFriend.imageName %}
                                <img class="img-fluid profile-img" src="{{ vich_uploader_asset(employee, 'imageFile')}}"
                                     alt="{{ CAFriend.firstname }} {{ CAFriend.lastname }}">
                            {% else %}
                                <img class="img-fluid profile_img" src="{{ asset('build/images/Portrait_Placeholder.jpg') }}"
                                     alt="{{ CAFriend.firstname }} {{ CAFriend.lastname }}">
                            {% endif %}
                        </div>
                        <div class="text-center">
                            <h3 class="m-3">{{ CAFriend.firstname }} {{ CAFriend.lastname }}</h3>
                            <p>{{ CAFriend.function }}</p>
                            <div class="email-CA">
                                <a href="mailto:{{ CAFriend.email }}"><i class="far fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="scroll-arrow" id="scroll-rightTwo" onclick="scrollRight()">
            <i class="fas fa-chevron-right"></i>
        </div>
    </div>
</section>

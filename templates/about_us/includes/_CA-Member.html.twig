<section class="bgCA-Member links" id="le-conseil-administration">
    <h2 class="text-center mt-md-5">Le conseil d'administration de La Gabare</h2>
    <div class="container-fluid text-center">
        <div class="scroll-arrow" id="scroll-left1">
            <i class="fas fa-chevron-left"></i>
        </div>
        <ul id="imgList1" class="ul-scroll">
            {% for CAMember in CAMembers %}
                <li class="li-scroll">
                    <div class="img-scroll">
                        <div class="profile">
                            {% if CAMember.imageName %}
                                <img class="img-fluid profile-img"
                                     src="{{ vich_uploader_asset(CAMember, 'imageFile') }}"
                                     alt="{{ CAMember.firstname }} {{ CAMember.lastname }}">
                            {% else %}
                                <img class="img-fluid profile_img"
                                     src="{{ asset('build/images/Portrait_Placeholder.jpg') }}"
                                     alt="{{ CAMember.firstname }} {{ CAMember.lastname }}">
                            {% endif %}
                        </div>
                        <div class="text-center">
                            <h3 class="m-3">{{ CAMember.firstname }} {{ CAMember.lastname }}</h3>
                            <p>{{ CAMember.function }}</p>
                            <div class="email-CA">
                                <a href="mailto:{{ CAMember.email }}"><i class="far fa-envelope"></i></a>
                            </div>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="scroll-arrow" id="scroll-right1" onclick="scrollRight()">
            <i class="fas fa-chevron-right"></i>
        </div>
    </div>
</section>

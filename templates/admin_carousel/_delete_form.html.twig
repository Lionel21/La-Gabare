<form method="post" action="{{ path('carousel_delete', {'id': carousel.id}) }}" onsubmit="return confirm('Voulez-vous supprimer ce contenu du carrousel?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ carousel.id) }}">
    <button class="btn btn-danger">Supprimer<i class="fas fa-trash-alt ml-1"></i></button>
</form>

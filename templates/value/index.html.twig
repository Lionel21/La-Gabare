{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des valeurs{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Liste des valeurs</h1>


    <a href="{{ path('value_new') }}" class="btn btn-primary add mb-4">Ajouter<i
                class="fas fa-plus ml-2"></i></a>

    <table class="table table-striped">
        <thead class="thBackground">
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for value in values %}
            <tr>
                <td>{{ value.id }}</td>
                <td>{{ value.number }}</td>
                <td>{{ value.title }}</td>
                <td class="d-flex pt-3">
                    <a href="{{ path('value_show', {'id': value.id}) }}" class="btn btn-secondary mr-4">Aperçu<i
                                class="fas fa-file-alt ml-1"></i></a>
                    <a href="{{ path('value_edit', {'id': value.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                    <div>
                        {{ include('value/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucune valeur trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}

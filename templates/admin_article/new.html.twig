        {{ form_end(form) }}
        <div class="mt-4">
        <div class="mt-4">
            <a href="{{ path('article_index') }}" class="btn btn-outline-dark">Retour Ã  la liste</a>
        </div>
    </div>

</div>
{% endblock %}

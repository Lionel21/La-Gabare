{% extends 'layoutAdmin.html.twig' %}

{% block title %}Ajouter un article{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Ajouter un article</h1>
    <div class="col-lg-8 pt-3 pb-3 m-0 jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.date) }}

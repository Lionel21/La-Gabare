{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="container-fluid p-5">
    <h1 class="ml-3 mb-4">Aperçu de l'article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ article.image }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('d/m/Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-success ml-3">Éditer</a>

    <div class="mt-4">
    {{ include('admin_article/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}

<div class="container-fluid p-5">
    <h1>Liste des articles</h1>

    <a href="{{ path('article_new') }}" class ="btn btn-primary mb-4">Ajouter</a>

    <table class="table table-striped">
        <thead class="thBackground">
            <tr>
                <th>Titre</th>
                <th>Date</th>
                <th>Thème</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.date ? article.date|date('d/m/Y') : '' }}</td>
                <td>{{ article.theme.name }}</td>
                <td>{{ article.image }}</td>
                <td class="d-flex pt-3">
                    <a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-secondary mr-4">Aperçu</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-success mr-4">Éditer</a>
                    <div>
                        {{ include('admin_article/_delete_form.html.twig') }}
                    </div>
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

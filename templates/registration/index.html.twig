{% extends 'layoutAdmin.html.twig' %}

{% block title %}Gestion des administrateurs{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Gestion des administrateurs</h1>

    <table class="table table-striped">
        <thead class="thBackground">
        <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(' | ') }}</td>
                <td class="d-flex pt-3">
                    <a href="{{ path('admin_edit', {'id': user.id}) }}" class="btn btn-success mr-4">Éditer<i
                                class="fas fa-pen ml-1"></i></a>
                    {% if loop.index > 1 %}
                    <div>
                        {{ include('registration/delete.html.twig') }}
                    </div>
                    {% endif %}
                </td>
            </tr>

        {% else %}
            <tr>
                <td colspan="7">Aucun administrateur trouvé</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>

{% endblock %}

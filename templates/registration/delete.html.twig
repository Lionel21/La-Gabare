<form method="post" action="{{ path('admin_delete', {'id': user.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cet administrateur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn btn-danger">Supprimer<i class="fas fa-trash-alt ml-1"></i></button>
</form>

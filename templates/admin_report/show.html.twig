{% extends 'layoutAdmin.html.twig' %}

{% block title %}Afficher un compte-rendu{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
     <h1 class="ml-3 mb-4">Détails du compte-rendu</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ report.title }}</td>
            </tr>
            <tr>
                <th>Date de réunion</th>
                <td>{{ report.meetingDate ? report.meetingDate|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ report.link }}</td>
            </tr>
        </tbody>
    </table>
        <a href="{{ path('report_index') }}" class="btn btn-outline-dark">Retour à la liste</a>

        <a href="{{ path('report_edit', {'id': report.id}) }}" class="btn btn-success ml-3">éditer</a>
        <div class="mt-4">
         {{ include('admin_report/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

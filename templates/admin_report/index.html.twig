{% extends 'base.html.twig' %}

{% block title %}Report index{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1 class="mb-4">Liste des compte-rendus</h1>

    <a href="{{ path('report_new') }}" class ="btn btn-primary mb-4">Ajouter</a>

    <table class="table table-striped">
        <thead class="thBackground">
            <tr>
                <th>Titre</th>
                <th>Date de réunion</th>
                <th>Lien</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for report in reports %}
            <tr>
                <td>{{ report.title }}</td>
                <td>{{ report.meetingDate ? report.meetingDate|date('d/m/Y') : '' }}</td>
                <td>{{ report.link }}</td>
                <td class="d-flex pt-3">
                    <a href="{{ path('report_show', {'id': report.id}) }}" class="btn btn-secondary mr-4">Aperçu</a>
                    <a href="{{ path('report_edit', {'id': report.id}) }}" class="btn btn-success mr-4">Éditer</a>
                    <div>
                        {{ include('admin_report/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun compte-rendu trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}

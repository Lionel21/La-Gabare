{% extends 'layoutAdmin.html.twig' %}

{% block title %}Agenda des réunions d'information{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    {% for label, messages in app.flashes(['success', 'danger']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <h1>Liste des réunions d'information</h1>

    <a href="{{ path('timetable_new') }}" class ="btn btn-primary mb-4">Ajouter</a>

    <table class="table table-striped">
        <thead class="thBackground">
            <tr>
                <th>Date</th>
                <th>Heure</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timetable in timetables |sortbyfield('visitDate') %}
            <tr>
                <td>{{ timetable.visitDate ? timetable.visitDate|date('d/m/Y') : '' }}</td>
                <td>{{ timetable.visitTime ? timetable.visitTime|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('timetable_show', {'id': timetable.id}) }}" class="btn btn-secondary mr-4">Aperçu</a>
                    <a href="{{ path('timetable_edit', {'id': timetable.id}) }}" class="btn btn-success mr-4">Éditer</a>
                    <div>
                        {{ include('admin_timetable/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune réunion trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}


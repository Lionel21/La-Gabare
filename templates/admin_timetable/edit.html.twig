{% extends 'layoutAdmin.html.twig' %}

{% block title %}Editer une réunion{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Éditer un article</h1>
    <div class="mb-3">
        <a href="{{ path('timetable_index') }}" class="btn btn-outline-dark mr-5">Retour à la liste</a>
    </div>
    <div class="col-lg-8 pt-3 pb-3 m-0 jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.visitTime) }}
        {{ form_row(form.visitDate) }}
        <button class="btn btn-primary mt-2">Mettre à jour</button>
        {{ form_end(form) }}
        <div>
            <div class="mt-4">
               {{ include('admin_timetable/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}

{% extends 'layoutAdmin.html.twig' %}

{% block title %}Ajouter un theme{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1>Ajouter un thème</h1>
    <div class="col-lg-8 pt-3 pb-3 m-0 jumbotron">
        {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.color) }}
        <button class="btn btn-primary mt-2">Ajouter</button>
        {{ form_end(form) }}
        <div class="mt-4">
            <a href="{{ path('theme_index') }}" class="btn btn-outline-dark">Retour à la liste</a>
        </div>
    </div>

</div>
{% endblock %}

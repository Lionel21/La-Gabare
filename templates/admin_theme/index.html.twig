{% extends 'layoutAdmin.html.twig' %}

{% block title %}Theme index{% endblock %}

{% block body %}
    <div class="container-fluid p-5">
        <h1>Theme index</h1>

        <a href="{{ path('theme_new') }}" class="btn btn-primary add mb-4">Ajouter<i
                    class="fas fa-plus ml-2"></i></a>

        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for theme in themes %}
                <tr>
                    <td>{{ theme.id }}</td>
                    <td>{{ theme.name }}</td>
                    <td>
                        <a href="{{ path('theme_show', {'id': theme.id}) }}">show</a>
                        <a href="{{ path('theme_edit', {'id': theme.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}
